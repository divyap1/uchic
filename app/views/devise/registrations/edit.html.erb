<div class="row">
  <div class="col-md-12">
    <div class="box">
      <h1>Account settings</h1>
      <hr />

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <h3>Login details</h3>

            <div class="form-group editor has-feedback">
              <%= f.label :email, class: "sr-only" %>
              <%= f.email_field :email, placeholder: "Email address", class: "form-control", autofocus: true %>
              <i class="glyphicon glyphicon-globe form-control-feedback" aria-hidden="true"></i>
            </div>

            <div class="well well-sm">
              <div class="form-group has-feedback">
                <%= f.label :password, class: "sr-only" do %>
                  New password (<%= @minimum_password_length %> characters or more)
                <% end %>
                <%= f.password_field :password, placeholder: "New password", autocomplete: "new-password", class: "form-control" %>
                <i class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirm new password", class: "sr-only" %>
                <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "off", class: "form-control" %>
                <p class="help-block">Only enter this if you want to change your password.</p>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <h3>Personal details</h3>

            <div class="form-group has-feedback">
              <%= f.label :name, class: "sr-only" %>
              <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
              <i class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></i>
            </div>

            <div class="form-group has-feedback">
              <%= f.label :address, class: "sr-only" %>
              <%= f.text_area :address, placeholder: "Address", rows: 3, class: "form-control" %>
              <i class="glyphicon glyphicon-map-marker form-control-feedback" aria-hidden="true"></i>
            </div>

            <div class="form-group">
              <%= f.label :profile_picture, "Change profile picture" %>
              <%= f.file_field :profile_picture %>
            </div>
          </div>
        </div>

        <hr />

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="form-group has-feedback">
              <%= f.label :current_password, class: "sr-only" %>
              <%= f.password_field :current_password, placeholder: "Current password", autocomplete: "off", class: "form-control" %>
              <i class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></i>
              <p class="help-block">We need this to confirm any changes you make.</p>
            </div>

            <div class="text-center">
              <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="box">
      <h3>Cancel account</h3>

      <p>
        Unhappy?
        <%= link_to "Cancel your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </p>
    </div>
  </div>
</div>
