<div class="row">
  <div class="col-md-12">
    <div class="box without-spacing">
      <h1>New account</h1>

      <p class="lead">Not signed up yet? A fantastic new world of art, fashion and more is just a few clicks away!</p>
      <hr>

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <h3><span class="circled-number">1</span> Login details</h3>

            <div class="form-group has-feedback">
              <%= f.label :email, class: "sr-only" %>
              <%= f.email_field :email, placeholder: "Email address", class: "form-control", autofocus: true %>
              <i class="glyphicon glyphicon-globe form-control-feedback" aria-hidden="true"></i>
            </div>
            <div class="form-group has-feedback">
              <%= f.label :password, class: "sr-only" do %>
                Password (<%= @minimum_password_length %> characters or more)
              <% end %>
              <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
              <i class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></i>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: "sr-only" %>
              <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "off", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <h3><span class="circled-number">2</span> Personal details</h3>

            <div class="form-group has-feedback">
              <%= f.label :name, class: "sr-only" %>
              <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
              <i class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></i>
            </div>
            <div class="form-group has-feedback">
              <%= f.label :address, class: "sr-only" %>
              <%= f.text_area :address, placeholder: "Address", rows: 3, class: "form-control" %>
              <i class="glyphicon glyphicon-map-marker form-control-feedback" aria-hidden="true"></i>
            </div>
            <div class="form-group">
              <%= f.label :profile_picture %>
              <%= f.file_field :profile_picture %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-center">
            <h3><span class="circled-number">3</span> Go for it!</h3>
            <%= f.submit "Register", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: "devise/shared/links" %>
