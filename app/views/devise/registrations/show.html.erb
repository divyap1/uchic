<div class="row">
  <div class="col-md-12">
    <div class="box">
      <h1>
        Account settings
        <%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary pull-right" %>
      </h1>

      <div class="row">
        <div class="col-md-6">
          <h3>Login details</h3>

          <div class="row">
            <div class="col-xs-4">
              <strong>Email address:</strong>
            </div>
            <div class="col-xs-8">
              <%= @user.email %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-4">
              <strong>Password:</strong>
            </div>
            <div class="col-xs-8">
              <%= link_to("Change", edit_user_registration_path) %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <h3>Personal details</h3>

          <div class="row">
            <div class="col-xs-4">
              <strong>Name:</strong>
            </div>
            <div class="col-xs-8">
              <%= @user.name %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-4">
              <strong>Address:</strong>
            </div>
            <div class="col-xs-8">
              <%= simple_format(@user.address) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
