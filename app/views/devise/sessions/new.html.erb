<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box">
      <h1>Log in</h1>

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group has-feedback">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, placeholder: "Email address", class: "form-control", autofocus: true %>
          <i class="glyphicon glyphicon-globe form-control-feedback" aria-hidden="true"></i>
        </div>
        <div class="form-group has-feedback">
          <%= f.label :password, class: "sr-only" do %>Password<% end %>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
          <i class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></i>
        </div>
        <div class="text-center">
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              Remember me
              <% end %>
            </div>
          <% end -%>
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
