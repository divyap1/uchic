<div class="box seller-bar">
    <div class="row">
      <% @top_sellers.each do |seller| %>
      <div class="col-sm-12 col-md-4 commissions-showing">
        <div class="row">
            <div class="col-md-6">
                <img class="profile-picture img-responsive" alt="Profile picture" src="<%= seller.profile_picture.url %>">
            </div>
            <div class="col-md-6" , id="seller-details">
                <h5><%= seller.name %></h5>
                <%= link_to "Visit their page", user_profile_path(seller.id), class:"btn btn-primary" %>
            </div>
          </div>
      </div>
      <% end %>
    </div>
</div>
