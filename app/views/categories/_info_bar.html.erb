<div class="box info-bar">
    <div class="row">
        <div class="col-sm-12 col-md-4 commissions-showing">
            <%= page_entries_info @commissions %>
        </div>

        <div class="col-sm-12 col-md-8  commissions-number-sort">
            <div class="row">
                <form class="form-inline">
                    <div class="col-md-6 col-sm-6">
                        <div class="commissions-number">
                            <strong>Show</strong>
                            <% @display_sizes.each do |size| %>
                              <% if @display_size == size %>
                                <%= link_to size, category_path(@category.id, display_size: size), class:"btn btn-default btn-sm btn-primary" %>
                              <% else %>
                                <%= link_to size, category_path(@category.id, display_size: size), class:"btn btn-default btn-sm" %>
                              <% end %>
                            <% end %>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="commissions-sort-by">
                            <strong>Sort by</strong>
                            <select name="sort-by" class="form-control">
                                <option>Price</option>
                                <option>Name</option>
                                <option>Sales first</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
