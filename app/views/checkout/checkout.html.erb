<div class="row">
  <div class="col-md-12">
    <div class="box">

      <div class="row">
        <div class="text-center">
          <h1>New Order</h1>
        </div>
        <hr>
        <div class="col-md-6">
          <img src="img/detailsquare.jpg" alt="White Blouse Armani">
        </div>
          <div class="col-md-6">
        <div class="table-responsive">
            <table class="table">
                <tfoot>
                    <tr>
                        <th colspan="5" class="text-right">Order subtotal</th>
                        <th>$446.00</th>
                    </tr>
                    <tr>
                        <th colspan="5" class="text-right">Shipping and handling</th>
                        <th>$10.00</th>
                    </tr>
                    <tr>
                        <th colspan="5" class="text-right">Tax</th>
                        <th>$0.00</th>
                    </tr>
                    <tr>
                        <th colspan="5" class="text-right">Total</th>
                        <th>$456.00</th>
                    </tr>
                </tfoot>
            </table>
        </div>
      </div>
    </div>
        <div class="row addresses">
            <div class="col-md-6">
              <h2>Shipping Address</h2>
                <p><%= current_user.name %>
                <%= simple_format(current_user.address) %></p>
            </div>
            <div class="col-md-6">
                <h2>Payment Details</h2>
                <p>Card Holder's Name: <%= current_user.card_name %>
                <br>Credit Card: <%= current_user.card_number %>
                <br>Expiry Date (MM/YYYY): <%= current_user.expiration_month %>/<%= current_user.expiration_year %>
                <br>CVC: <%= current_user.security_code %></p>
            </div>
        </div>
        <hr>
        <div class="text-center">
          <button class="btn btn-primary btn-lg">Confirm Order</button>
        </div>
    </div>
  </div>
</div>
