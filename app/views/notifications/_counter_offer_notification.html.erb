<li class="media">
    <%= link_to notification_path(notification), class: "btn btn-link pull-right", method: 'delete' do %>
    <i class="glyphicon glyphicon-remove"></i>
    <% end %>
  <div class="media-left">
    <%= image_tag "counter offer/copy.png" %>
  </div>
    <div class="media-body">
        <h3 class = "media-heading"> Someone proposed a counter offer!</h3>
    <h4>
        <%= "#{notification.about_user.name} proposed a new offer on #{notification.commission.name}" %></h4>
    <%= link_to "View details", commission_path(notification.commission), class: "btn btn-primary" %>
    <% link_to "Message seller", message_thread_path(notification.commission.message_thread), class: "btn btn-default" %>
    <%= link_to "Accept", approve_commission_path(notification.commission), class: "btn btn-success", method: "post", return_to: "notification_path" %>
    <%= link_to "Decline", commission_path(notification.commission), class: "btn btn-danger", method: "delete", return_to: "notification_path", data: { confirm: 'Are you sure?' } %>
</div>
</li>
