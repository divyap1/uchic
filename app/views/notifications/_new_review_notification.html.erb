<li class="media">
    <%= link_to notification_path(notification), class: "btn btn-link pull-right", method: 'delete' do %>
    <i class="glyphicon glyphicon-remove"></i>
    <% end %>
    <div class="media-left">
      <%= image_tag "notification/review.png" %>
    </div>
    <div class="media-body">
        <h3 class = "media-heading"><%= "Someone just reviewed you!" %></h3>
        <h4> <%= "#{notification.about_user.name} gave you #{notification.review.rating} stars" %> </h4>
        <%= link_to "See your reviews", user_profile_path(notification.user), class: "btn btn-primary" %>
</div>
</li>
