<div class="col-md-12">

    <ul class="breadcrumb">
        <li><a href="/">Home</a>
        </li>
        <li>My orders</li>
    </ul>

</div>

<%= render :partial => "customersection"%>

<div class="col-md-9" id="customer-orders">
    <div class="box">
        <h1>My Orders</h1>

        <p class="lead">Your orders in one place.</p>

        <hr>
        <% if @orders && @orders.length > 0  %>
          <div class="table-responsive">
              <table class="table table-hover">
                  <thead>
                      <tr>
                          <th>Order</th>
                          <th>Date</th>
                          <th>View</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @orders.each do |order| %>
                      <tr>
                        <td><%= order.id %></td>
                        <td><%= order.created_at.strftime "%d %B %Y" %></td>
                        <td style="padding-left: 10px">
                          <%= link_to order, class: "btn btn-primary" do %>
                            View order
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
          </div>
        <%end %>
        <p>You have not placed any orders yet</p>
    </div>
</div>