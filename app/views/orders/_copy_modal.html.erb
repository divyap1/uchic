<!-- Modal -->
<div id="requestCopy" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Request A Copy of <%= @commission.name %>?</h3>
      </div>
      <% if user_signed_in? %>
      <%= form_tag(make_copy_commissions_path) do %>
      <div class="modal-body">
        <p> Seller: <%= link_to @seller.name, user_profile_path(@seller.id) %> </p>
        <p> Description: <%= @commission.description %> </p>
        <%= hidden_field_tag "seller_id", @seller.id %>
        <%= hidden_field_tag "buyer_id", current_user.id %>
        <%= hidden_field_tag "commission_id", @commission.id %>
        <div class="table-responsive">
          <table class="table">
            <tfoot>
              <tr>
                <th class="text-right">Price <small>(NZD)</small></th>
                <th class="text-right"><%= "$#{number_with_precision(@commission.price, :precision => 2)}" %></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-6">
              <div class="text-left">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
            </div>
            <div class="col-md-6">
              <div class="text-right">
                <%= submit_tag "Send Request", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% else %>
      <div class="modal-body">
      <h5> You need to <%= link_to "Login", new_user_session_path %> to be able to request a commission.
        If you do not have an account, you can register <%= link_to "here", new_user_registration_path %></h5>
      </div>
      <% end %>
    </div>

  </div>
</div>
