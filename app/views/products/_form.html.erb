<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true%>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price%><br>
    <%= f.number_field :price, required: true, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :quantity%><br>
    <%= f.number_field :quantity, required: true %>
  </div>
  <div class="field">
    <!--This will be hidden once login is setup, as user shouldnt be able to set seller-->
    <%= f.label :seller_id %><br>
    <%= f.text_field :seller_id, :value => user_signed_in? ? current_user.id : -1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
