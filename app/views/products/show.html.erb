<div id="all">

    <div id="content">
        <div class="container">
            <%= render partial: 'categories/breadcrumb' %>

            <div class="col-md-3">
                <%= render partial: 'categories/category_sidebar' %>
            </div>

            <div class="col-md-9">

                <div class="row" id="productMain">
                    <div class="col-sm-6">
                        <div id="mainImage">
                            <%= image_tag @product.picture alt:"", class:"img-responsive" %>
                        </div>
                        <% if @product.created_at > Time.now - 24.hours %>
                        <div class="ribbon new">
                            <div class="theribbon">NEW</div>
                            <div class="ribbon-background"></div>
                        </div>
                        <!-- /.ribbon -->
                        <% end %>
                    </div>

                    <div class="col-sm-6">

                        <div class="box">
                            <h1 class="text-center"><%= @product.name %></h1>
                            <p class="price"><%= "$#{number_with_precision(@product.price, :precision => 2)}" %></p>

                            <p class="text-center buttons">
                                <%= link_to "Buy Now", product_checkout_path(@product.id), class:"btn btn-primary" %>
                                <a href="basket.html" class="btn btn-default">
                                    <i class="fa fa-heart"></i>
                                    Add to wishlist</a>
                            </p>
                        </div>

                        <div class="row" id="thumbs">
                            <div class="col-xs-4">
                                <a href="img/detailbig1.jpg" class="thumb">
                                    <img src="img/detailsquare.jpg" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a href="img/detailbig2.jpg" class="thumb">
                                    <img src="img/detailsquare2.jpg" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a href="img/detailbig3.jpg" class="thumb">
                                    <img src="img/detailsquare3.jpg" alt="" class="img-responsive">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box" id="details">
                  <p>
                    <h4>Product details</h4>
                            <p><%= @product.description %></p>
                            <hr>
                            <div class="social">
                                <h4>Show it to your friends</h4>
                                <p>
                                    <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                                    <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                                    <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                                    <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                                </p>
                            </div>
                    </div>

                    <div class="row same-height-row">
                        <div class="col-md-3 col-sm-6">
                            <div class="box same-height">
                                <h3>You may also like these products</h3>
                            </div>
                        </div>
                        <% @similar_items.each do |similar_item| %>
                        <div class="col-md-3 col-sm-6">
                            <div class="product same-height">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                          <%= link_to product_path(similar_item.id) do %>
                                              <%= image_tag similar_item.picture, alt: "", class:"img-responsive" %>
                                          <% end %>
                                        </div>
                                        <div class="back">
                                          <%= link_to product_path(similar_item.id) do %>
                                              <%= image_tag similar_item.picture, alt: "", class:"img-responsive" %>
                                          <% end %>
                                        </div>
                                    </div>
                                </div>
                                <%= link_to product_path(similar_item.id), class: "invisible" do %>
                                      <%= image_tag similar_item.picture, alt: "", class:"img-responsive" %>
                                <% end %>
                                <div class="text">
                                    <h3><%= similar_item.name %></h3>
                                    <p class="price"><%= "$#{number_with_precision(similar_item.price, :precision => 2)}" %></p>
                                </div>
                            </div>
                            <!-- /.product -->
                        </div>
                        <% end %>
                      </div>
                    </div>
              <!-- /.col-md-9 -->
          </div>
          <!-- /.container -->
      </div>
      <!-- /#content -->
    </div>
