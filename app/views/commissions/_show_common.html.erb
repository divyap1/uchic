<div class="col-sm-6">
  <div id="mainImage">
    <%= image_tag @commission.pictures.first ? @commission.pictures.first.picture.url(:medium) : "products/default.png", alt:"", class:"img-responsive" %>
  </div>
  <% if @commission.created_at > Time.now - 24.hours %>
    <div class="ribbon new">
      <div class="theribbon">NEW</div>
      <div class="ribbon-background"></div>
    </div>
  <% end %>
</div>

<div class="col-sm-6">
  <div class="box">
    <h1 class="text-center"><%= @commission.name %></h1>
    <p class="price"><%= "$#{number_with_precision(@commission.price, :precision => 2)}" %></p>

    <p class="text-center buttons">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#requestCopy">Request Copy</button>
      <%= render partial: 'orders/copy_modal' %>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#requestSimilar">Request Similar</button>
      <%= render partial: 'orders/similar_modal' %>
    </p>
  </div>

  <div class="row" id="thumbs">
    <% @commission.pictures.each do |photo| %>
    <div class="col-xs-4">
      <%= link_to photo.picture.url(:medium), class:"thumb"  do %>
      <%= image_tag photo.picture.url(:medium), alt: "", class: "img-responsive" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>

<div class="box" id="details">
<div class="row">
  <div class="col-md-6">
    <h4>Product details</h4>
    <p><%= @commission.description %></p>
    <hr>
    <div class="social">
      <h4>Show it to your friends</h4>
      <p>
        <a href="#" class="external facebook" data-animate-hover="pulse">
          <i class="fa fa-facebook"></i>
        </a>
        <a href="#" class="external gplus" data-animate-hover="pulse">
          <i class="fa fa-google-plus"></i>
        </a>
        <a href="#" class="external twitter" data-animate-hover="pulse">
          <i class="fa fa-twitter"></i>
        </a>
        <a href="#" class="email" data-animate-hover="pulse">
          <i class="fa fa-envelope"></i>
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <h4>Seller details</h4>
      <div class="row">
        <div class="col-md-6">
          <img class="profile-picture img-responsive" alt="Profile picture" src="<%= @seller.profile_picture.url(:medium) %>">
        </div>
        <div class="col-md-6" , id="seller-details">
          <h5><%= @seller.name %></h5>
          <%= link_to "Visit Page", user_profile_path(@seller.id), class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
