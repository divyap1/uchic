<div class="container">
	<div class="row">
	    <div class="col-md-12">
	        <div class="box without-spacing">
							<% if params[:message_thread_id] %>
									<%= link_to message_thread_path(params[:message_thread_id]), class: "btn btn-default" do %>
										<span class="glyphicon glyphicon-chevron-left"></span> Return to messages
									<% end %>
							<% end %>

	            <h1>Sell Item</h1>

	            <%if user_signed_in?%>

		            <%= form_for(@commission) do |f| %>
								<% if params[:message_thread_id] %>
									<%= hidden_field_tag :message_thread_id, params[:message_thread_id] %>
								<% end %>

		            <%if @commission.errors.any? %>
			            <div id="error_explanation">
			                <h2><%= pluralize(@commission.errors.count, "error") %>
			                prohibited this commission from being saved:</h2>
			                <ul>
			                    <%@commission.errors.full_messages.each do |message| %>
			                    <li><%= message %></li><%end %>
			                </ul>
			            </div>
		            <%end %>

		            <div class="form-group">
		                <%= f.label :name, class: "sr-only"%>
		                <%= f.text_field :name, placeholder: "Commission Name", required: true, class: "form-control" %>
		            </div>
		            <div class="form-group">
		                <%= f.label :description,class: "sr-only" %>
		                <%= f.text_area :description, placeholder: "Commission Description", class: "form-control"  %>
		            </div>
		            <div class="form-group">
		                <%= f.label :price, class: "sr-only"%>
		                <%= f.number_field :price, placeholder: "Price", required: true, :step => 0.01, class: "form-control" %>
		            </div>
		            <div class="form-group">
		            	<%= f.label :category_id, class: "sr-only"%>
		            	<%= f.select(:category_id, @categories.collect {|c| [c.name, c.id]}, {},  :class => "form-control", :prompt => "Choose category") %>
					</div>

		            <div class="form-group">
		                <%= f.label :pictures, class: "sr-only"%>
		                <%= f.file_field :pictures, {accept: 'image/png,image/jpeg', multiple: true} %>
		            </div>

		            <div class="form-group">
		                <%= f.label "Make commision private"%>
		                <%=f.check_box :public, {:checked => !@commission.public}, 0, 1%>
		            </div>

		            <div class="form-group">
		                <%= f.label :seller_id, class: "sr-only"%>
		                <%= f.hidden_field :seller_id, value: current_user.id %>
		            </div>
		            <div>
		                <%= f.submit class: "btn btn-primary" %>
		            </div>

	 				<% end %>
	 			<% end %>

	            <br>
	            <%= link_to 'Back', commissions_path, :class => 'btn btn-warning' %>
	        </div>
	    </div>
	</div>
</div>

<script type="text/javascript">

	var newOptions = {"Option 1": "value1",
	  "Option 2": "value2",
	  "Option 3": "value3"
	};

	var $el = $("#subcategory_select");
	$el.empty();

	$.each(newOptions, function(value,key) {
	  $el.append($("<option></option>").attr("value", value).text(key));
	});

</script>
