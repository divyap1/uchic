<div class="container">
  <div class="user-profile">

    <div class="row">
      <div class="col-md-12">
        <div class="commissions panel panel-default">
          <span class="message not-accepting">Hi <%= @user.first_name %>, Welcome Back!</span>


          <div class="pull-right"</div>
          	 <%= link_to "View profile", user_profile_path(current_user), class: "btn btn-default"%>
          	 <%= link_to "Edit profile",  edit_user_registration_path, class: "btn btn-default"%>
          </div>

        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-md-6">
        <div class="products panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Buying</h3>
          </div>
          <div class="panel-body">

          	<h4>Recent Purchases</h3>

          	<% if @orders && @orders.length > 0  %>
	          <div class="table-responsive">
	              <table class="table table-hover">
	                  <thead>
	                      <tr>
	                          <th>Order</th>
	                          <th>Date</th>
	                          <th>View</th>
	                      </tr>
	                  </thead>
	                  <tbody>
	                    <% @orders.each do |order| %>
	                      <tr>
	                        <td><%= order.id %></td>
	                        <td><%= order.created_at.strftime "%d %B %Y" %></td>
	                        <td style="padding-left: 10px">
	                          <%= link_to order, class: "btn btn-default" do %>
	                            View order
	                          <% end %>
	                        </td>
	                      </tr>
	                    <% end %>
	                  </tbody>
	              </table>
	          </div>
	        <%else %>
	        <p>No recent orders</p>
	        <%end %>

	        <%= link_to "View all orders", orders_path, class: "btn btn-default" %>

          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="products panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Selling</h3>
          </div>
          <div class="panel-body">

          	<h4>Current commisions</h4>

          	<!--Change condition once commisions have been setup-->
 			<% if 1==2 %>
          	<div class="alert alert-success" role="alert">
		      <span class="glyphicon glyphicon-cog pull-right" aria-hidden="true"></span>
		      Accepting commisions for:
		    </div>
			<% else %>
		    <div class="alert alert-danger" role="alert">
		      <span class="glyphicon glyphicon-cog pull-right" aria-hidden="true"></span>
		      Not currently accepting commisions
		    </div>
		    <% end %>

          	<% if @products && @products.any? %>
	          	<h4> <%=@products.length%> Recent Products</h4>

	          	<div class="table-responsive">
	              <table class="table table-hover">
	                  <tbody>
	                    <% @products.each do |product| %>
	                      <tr>
	                      	<td><%= image_tag product.pictures.first ? product.pictures.first.picture.url : "products/default.png", size: "32" %></td>
	                        <td><%= product.name %></td>
	                        <td>$<%= product.price %></td>
	                      </tr>
	                    <% end %>
	                  </tbody>
	              </table>
	          	</div>
        	<% end %>

        	<%= link_to "View all products", user_listings_path, class: "btn btn-default" %>

	        <%= link_to "List another product", new_product_path, class: "btn btn-default" %>

         </div>

        </div>
      </div>


    </div>
  </div>
</div>
