<div class="row">
  <div class="col-md-12">

    <ul class="breadcrumb">
      <li><a href="/dashboard">Dashboard</a></li>
      <li>My Orders</li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12" id="customer-orders">
    <div class="box">
      <h1>My Orders</h1>

      <p class="lead">All the commissions you have ordered in one place.</p>

      <hr>
      <% if @commissions && @commissions.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Product</th>

              <th>Last Updated</th>
              <th>State</th>
            </tr>
          </thead>
          <tbody>
            <% @commissions.each do |commission| %>
            <tr data-link="<%=commission_path(commission)%>">
              <td><%= image_tag commission.pictures.first ? commission.pictures.first.picture.url : "products/default.png", size: "32" %>
              &nbsp;&nbsp;&nbsp;<%= link_to commission.name, commission_path(commission) %></td>
              <td><%= commission.updated_at.strftime "%d %B %Y" %></td>
              <td><%= render partial: 'commissions/display_state', locals: {:state => commission.state} %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
      <p>You have not commissioned any products yet</p>
      <% end %>
    </div>
  </div>
</div>
