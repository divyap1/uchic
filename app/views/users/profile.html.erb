<div class="container">
<div class="user-profile">
  <h1 class="name"><%= @user.name %></h1>
  <div class="info">
    Wellington, NZ
    <span class="divider" aria-hidden="true">&bull;</span>
    <span class="rating">
      <% 5.times do %>
        <span class="glyphicon glyphicon-star"></span>
      <% end %>
      (45)
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="commissions panel panel-default">
        <span class="message not-accepting"><%= @user.first_name %> is not currently accepting commissions.</span>
        <button class="btn btn-default start-message" data-receiver="<%= @user.id %>">
          <span class="glyphicon glyphicon-comment"></span>
          Send a message anyway
        </button>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="products panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Products</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @user.products.each do |product| %>
              <li><%= product.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="reviews panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Reviews</h3>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
